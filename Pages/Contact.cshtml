@page
@model Portfolio.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h1 class="h2 fw-bold mb-4">Contact</h1>

@if (Model.Sent)
{
    <div class="alert alert-success" role="alert">
        Thanks! Your message was sent (demo). Iâ€™ll get back to you soon.
    </div>
}

<form method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Form.Name" class="form-label"></label>
        <input asp-for="Form.Name" class="form-control" />
        <span asp-validation-for="Form.Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Form.Email" class="form-label"></label>
        <input asp-for="Form.Email" class="form-control" />
        <span asp-validation-for="Form.Email" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Form.Message" class="form-label"></label>
        <textarea asp-for="Form.Message" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Form.Message" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-dark">Send</button>
    </div>
</form>

<p class="text-secondary mt-4 mb-0">
    Prefer email? <a href="mailto:you@example.com">pontusr@gmail.com</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
